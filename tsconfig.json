{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ESNext"],
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*"]
}
